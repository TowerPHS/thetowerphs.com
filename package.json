{
  "name": "thetowerphs.com",
  "description": "The website for Princeton High School's newspaper club, The Tower",
  "repository": "https://github.com/TowerPHS/thetowerphs.com",
  "author": {
    "name": "Luke Tong",
    "email": "luke.rtong@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "build:remix": "remix build",
    "build:css": "sass styles:app/styles/ --style=compressed",
    "build": "run-s build:css build:remix",
    "dev:netlify": "cross-env NODE_ENV=development netlify dev",
    "dev:css": "sass styles/:app/styles/ --watch ",
    "dev": "run-p dev:css dev:netlify",
    "lint": "eslint app/**/**/*.ts app/**/**/*.tsx",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@netlify/functions": "^0.11.0",
    "@prisma/client": "^3.9.2",
    "@remix-run/netlify": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "remix": "^1.1.3",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@types/lodash": "^4.14.178",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "eslint-plugin-react": "^7.28.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^3.8.1",
    "sass": "^1.49.0",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
